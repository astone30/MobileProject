<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameScene">

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:textSize="25dp"
        android:text="00"
        />
    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="50dp"
        android:text="00"
        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <ImageView
        android:id="@+id/mole_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
            android:scaleType="fitCenter"
        app:srcCompat="@drawable/mole1" />
        <ImageView
            android:id="@+id/mole_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/mole1" />
        <ImageView
            android:id="@+id/mole_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/mole1" />
        <ImageView
            android:id="@+id/mole_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/mole1" />
        <ImageView
            android:id="@+id/mole_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/mole1" />
        <ImageView
            android:id="@+id/mole_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/mole1" />
        <ImageView
            android:id="@+id/mole_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/mole1" />
        <ImageView
            android:id="@+id/mole_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/mole1" />
        <ImageView
            android:id="@+id/mole_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/mole1" />
    </GridLayout>
</FrameLayout>